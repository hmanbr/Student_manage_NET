@model IEnumerable<G3.Models.User>

@{
	ViewData["Title"] = "ClassDetail";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
    int classId = (int)ViewBag.ClassId;

}

<h1>ClassDetail</h1>

<div class="container-fluid">
	<div class="card shadow mb-4">
		<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
			<h6 class="m-0 font-weight-bold text-primary">Student List</h6>
			<form asp-action="ClassStudents" asp-controller="Classroom">
				<input type="hidden" name="id" value="@classId" />
				<button type="submit" class="btn btn-outline-primary float-right">Manage students</button>
			</form>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" cellspacing="0">
					<thead>
						<tr>
							<th>
								ID
							</th>
							<th>
								Name
							</th>
							<th>
								Gender
							</th>
							<th>
								Email
							</th>
						</tr>
					</thead>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Id)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Name)
							</td>

							@if (item.Gender == true)
							{
								<td>Male</td>
							}
							else
							{
								<td>Female</td>
							}
							<td>
								@Html.DisplayFor(modelItem => item.Email)
							</td>
						</tr>
					}
				</table>
			</div>
		</div>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>
