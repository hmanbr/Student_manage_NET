@model IEnumerable<G3.Models.Class>

@{
	ViewData["Title"] = "View";
	Layout = "~/Views/Shared/AdminLayout.cshtml";

	Pager pager = new Pager();

	int pageNo = 0;

	if(ViewBag.Pager != null)
	{
		pager = ViewBag.Pager;
		pageNo = pager.CurrentPage;
	}
}

<h1>View</h1>

<form method="get" asp-controller="Classroom" asp-action="ClassList">
	<div class="input-group col-lg-3 float-left">
		<input type="text" class="form-control rounded" placeholder="Search" name="search" value="@ViewData["search"]" />
		<input type="submit" value="Search" class="btn btn-outline-primary" />
	</div>
</form>
<table class="table">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Name
			</th>
			<th>
				Subject Code
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				@foreach (var subject in Model)
				{
					if (subject.Id.Equals(item.Id))
					{
						<td>@subject.Subject.SubjectCode</td>
					}
				}
				
				<td>
					<a asp-action="ClassDetail" asp-route-id="@item.Id">Details</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<div class="container">
	@if(pager.TotalPages > 0)
	{
		<ul class="pagination justify-content-end">

			@if(pager.CurrentPage > 1)
			{
				<li class="page-item">
					<a class="page-link" asp-controller="Classroom" asp-action="ClassList" asp-route-pg="1">
						First
					</a>
				</li>
				<li class="page-item">
					<a class="page-link" asp-controller="Classroom" asp-action="ClassList" asp-route-pg="@(pager.CurrentPage-1)">
						Previous
					</a>
				</li>
			}

			@for(var pge = pager.StartPage; pge <= pager.EndPage; pge++)
			{
				<li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
					<a class="page-link" asp-controller="Classroom" asp-action="ClassList" asp-route-pg="@pge">
						@pge
					</a>
				</li>
			}

			@if(pager.CurrentPage < pager.TotalPages)
			{
				<li class="page-item">
					<a class="page-link" asp-controller="Classroom" asp-action="ClassList" asp-route-pg="@(pager.CurrentPage+1)">
						Next
					</a>
				</li>
				<li class="page-item">
					<a class="page-link" asp-controller="Classroom" asp-action="ClassList" asp-route-pg="@(pager.TotalPages)">
						Last
					</a>
				</li>
			}
		</ul>
	}
</div>