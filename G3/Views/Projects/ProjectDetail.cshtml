@model G3.Models.Project


@{
    ViewData["Title"] = "ProjectDetail";
    Layout = "~/Views/Shared/ClassManagerLayout.cshtml";
}

@{
    string tab = "";
}

<hr />
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4"> Project Detail </h2>
                    <div class="form-group">

                        <label asp-for="Status" class="control-label"></label>
                        @{
                            if (Model.Status == "ACTIVE")
                            {
                                <span class="text-success">Active</span>
                            }
                            else if (Model.Status == "INACTIVE")
                            {
                                <span class="text-danger">Inactive</span>
                            }
                        }

                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <form asp-action="ProjectDetail">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="ProjectCode" class="control-label">Project Code</label>
                            <input asp-for="ProjectCode" class="form-control" />
                            <span asp-validation-for="ProjectCode" class="text-danger"></span>
                            <h5 style="color:red; font-size:17px;">@ViewData["exist"]</h5>
                        </div>
                        <div class="form-group">
                            <label asp-for="EnglishName" class="control-label">English Name</label>
                            <input asp-for="EnglishName" class="form-control" />
                            <span asp-validation-for="EnglishName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VietNameseName" class="control-label">Vietnamese Name</label>
                            <input asp-for="VietNameseName" class="form-control" />
                            <span asp-validation-for="VietNameseName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GroupName" class="control-label">Group Name</label>
                            <input asp-for="GroupName" class="form-control" />
                            <span asp-validation-for="GroupName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <input asp-for="Status" class="form-control" readonly />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MentorId" class="control-label">Mentor</label>
                            <select asp-for="MentorId" class="form-control" asp-items="ViewBag.MentorId"></select>
                            <span asp-validation-for="MentorId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ClassId" class="control-label">Class</label>
                            <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId"
                                    readonly></select>
                            <span asp-validation-for="ClassId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <div>
                            <a asp-action="ProjectList">Back to List</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<ul class="nav nav-tabs mb-3" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link @(@tab == "details" ? "active":"")" id="ex1-tab-1" data-mdb-toggle="tab" href="?tab=details"
           role="tab" aria-controls="ex1-tabs-1" aria-selected="true">Details</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link @(@tab == "issues" ? "active":"")" id="ex1-tab-2" data-mdb-toggle="tab"
           href="?tab=issues" role="tab" aria-controls="ex1-tabs-2" aria-selected="false">Issues</a>
    </li>
   
</ul>

<div class="tab-content" id="ex1-content">
    <div class="tab-pane fade @(tab == "general" ? "show active":"")" id="ex1-tabs-1" role="tabpanel"
         aria-labelledby="ex1-tab-1">
        
    </div>
    <div class="tab-pane fade @(tab == "milestones" ? "show active":"")" id="ex1-tabs-2" role="tabpanel"
         aria-labelledby="ex1-tab-2">
        
    </div>
    
</div>
<a asp-action="Index">Back to List</a>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
