@model G3.Models.SubjectSetting

@{
    ViewData["Title"] = "SubjectSettingCreate";
    Layout = "~/Views/Shared/SubjectManagerLayout.cshtml";
}

<h1>Create</h1>

<h4>SubjectSetting</h4>
<hr />
<h5 style="color:red; font-size:17px;">@ViewData["exist"]</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="SubjectSettingCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <div class="form-check">
                    <input asp-for="Status" type="radio" value="true" checked>
                    <label class="form-check-label">Active</label>

                    <input asp-for="Status" style="margin-left:50px;" type="radio" value="false">
                    <label class="form-check-label">Inactive</label>
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SubjectSettingList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
