<div class="container mt-5">


    <form asp-action="SubjectSettingList" method="get" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
        <div class="input-group">

            <input type="text" class="form-control small" placeholder="Search for Subject Code or name"
                   aria-label="Search" aria-describedby="basic-addon2" name="search" value="@ViewData["search"]" style="margin-left:200px; width:500px; font-size: 15px; background-color:#f8f9fc;">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search fa-sm"></i>
                </button>
            </div>
        </div>
    </form>

</div>

<div class="container mt-5 text-lg-right">
    <form asp-action="SubjectSettingList" method="get" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100">
        <div class="form-group">
            <label for="SortBy">Sorted by Subject Code:</label>

            <select class="form-control" id="SortBy" name="SortBy">

                <option value="ASC">ascending</option>
                <option value="DESC">Descending</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Sort</button>
    </form>
</div>
<p>
<p style="width:100px; height:30px; background:red; border-radius:5px;">
    <a asp-action="SubjectSettingAdd" style=" color:white; margin:5px 0 0 7px; text-decoration:none">Create New</a>
</p>
</p>


<table id="SSL" class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject.Id)
            </th>
            <th>
                Subject Code
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject.Name)
            </th>
            <th>
                Work complexity levels
            </th>
            <th>
                Work quality levels
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject.Status)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.SubjectCode)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @{
                        if (item.Subject.Status == true)
                        {
                            <span class="text-success">Active</span>
                        }
                        else
                        {
                            <span class="text-danger">Inactive</span>
                        }
                    }
                </td>

                <td>
                    <a asp-action="SubjectSettingEdit" asp-route-id="@item.Id" ><img src="~/img/update.png" style="width:32px;height:32px;"></a> 
                    <a asp-action="SubjectSetting_toggle" asp-route-id="@item.Subject.Id">
                        @if (item.Subject.Status == true)
                        {
                            <i class="fa fa-check-circle" style="font-size:24px"></i>
                        }
                        else
                        {
                            <i class="fa fa-check-circle" style="font-size:24px;color:red"></i>
                        }
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (var i = 1; i <= ViewBag.TotalPages; i++)
        {
            var isActive = i == ViewBag.CurrentPage ? "active" : "";
            <li class="page-item @isActive"><a class="page-link" href="/Subjectsettings/SubjectSettingList?page=@i&pageSize=@ViewBag.PageSize">@i</a></li>
        }
    </ul>
</nav>



