@model G3.Models.SubjectSetting

@{
    ViewData["Title"] = "SubjectSettingAdd";
    Layout = "~/Views/Shared/SubjectManagerLayout.cshtml";
}
<style>
    .required::after {
        content: '*';
        color: red;
    }
</style>
<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="SubjectSettingAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Value" class="control-label required">Work quality levels</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label required">Work complexity levels</label>
             
                <select asp-for="Description" class="form-control">
                    <option value="normal">Normal</option>
                    <option value="Hard">Hard</option>
                    <option value="high">High</option>
                </select>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label required"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                <h5 style="color:red; font-size:17px;">@ViewData["exist"]</h5>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="SubjectSettingList">Back to List</a>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
