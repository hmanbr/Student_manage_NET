@model G3.Models.Submit

@{
    ViewData["Title"] = "SubmissionEvaluate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>SubmissionEvaluate</h1>

<h4>Submit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SubmissionEvaluate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CommentTime" class="form-control" value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
